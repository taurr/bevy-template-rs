// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Test (fast compile)",
      "detail": "Runs all tests",
      "type": "shell",
      "group": "test",
      "command": "cargo t --workspace --features bevy/dynamic",
      "options": {
        "env": {
          "RUST_LOG": "warn,{{crate_name}}=trace"
        }
      },
      "problemMatcher": ["$rustc"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true,
        "focus": true
      }
    },
    {
      "label": "Build release",
      "detail": "Make a release build",
      "type": "shell",
      "group": "build",
      "command": "cargo build --release",
      "problemMatcher": ["$rustc"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true,
        "focus": true
      }
    },
    {
      "label": "Build debug",
      "detail": "Make a debug build",
      "type": "shell",
      "group": "build",
      "command": "cargo build",
      "problemMatcher": ["$rustc"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true,
        "focus": true
      }
    },
    {
      "label": "Build doc",
      "detail": "Builds the documentation",
      "type": "shell",
      "command": "cargo doc",
      "problemMatcher": ["$rustc"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": true,
        "focus": true,
        "clear": true
      }
    },
    {
      "label": "Open doc",
      "detail": "Open the documentation",
      "type": "shell",
      "command": "cargo doc --open",
      "problemMatcher": ["$rustc"],
      "dependsOn": "Build doc"
    },
    {
      "label": "Update",
      "detail": "Update dependencies (Cargo.lock)",
      "type": "shell",
      "command": "cargo update",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true,
        "focus": true
      }
    },
    {
      "label": "Clippy",
      "detail": "Look for Clippy errors",
      "type": "shell",
      "command": "cargo clippy --all-features --all-targets -- -D warnings",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true,
        "focus": true
      }
    },
    {
      "label": "Format",
      "detail": "Format all source",
      "type": "shell",
      "command": "cargo fmt --all --quiet",
      "problemMatcher": [],
      "presentation": {
        "echo": false,
        "reveal": "never",
        "panel": "shared",
        "showReuseMessage": false
      }
    },
    {
      "label": "Clean",
      "detail": "Clean build artifacts",
      "type": "shell",
      "command": "cargo clean",
      "problemMatcher": [],
      "presentation": {
        "echo": false,
        "reveal": "never",
        "panel": "shared",
        "showReuseMessage": false
      }
    }
  ]
}
