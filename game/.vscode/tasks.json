// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Test",
      "detail": "Runs all tests",
      "type": "shell",
      "command": "cargo t --workspace",
      "linux": {
        "command": "cargo t --workspace --features bevy/dynamic"
      },
      "problemMatcher": ["$rustc"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true,
        "focus": true
      }
    },
    {
      "label": "Build release",
      "detail": "Make a release build",
      "type": "shell",
      "command": "cargo build --release",
      "problemMatcher": ["$rustc"],{% if crate_type == "lib" %}
      "group": "build",{% endif %}
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true,
        "focus": true
      }
    },{
      "label": "Open doc",
      "detail": "Open the documentation",
      "type": "shell",
      "command": "cargo doc --open",
      "problemMatcher": ["$rustc"],
      "dependsOn": "Build doc"
    },
    {
      "label": "Build doc",
      "detail": "Builds the documentation",
      "type": "shell",
      "command": "cargo doc",
      "problemMatcher": ["$rustc"],{% if crate_type == "lib" %}
      "group": "build",{% endif %}
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": true,
        "focus": true,
        "clear": true
      }
    },
    {
      "label": "Check all-features",
      "detail": "Run a compile check against all features",
      "type": "shell",
      "command": "cargo check --all-features --all-targets",
      "linux": {
        "command": "cargo check --features bevy/dynamic --all-features --all-targets"
      },
      "problemMatcher": ["$rustc"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true,
        "focus": true
      }
    },{% if crate_type != "lib" %}
    {
      "label": "Run release",
      "detail": "Runs binary in release mode",
      "type": "shell",
      "command": "cargo run --release --bin {{project-name}}",
      "linux": {
        "command": "cargo run --features bevy/dynamic --release --bin {{project-name}}"
      },
      "problemMatcher": ["$rustc"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true,
        "focus": true
      }
    },
    {
      "label": "Run release w. editor",
      "detail": "Runs binary in release mode, with editor enabled",
      "type": "shell",
      "command": "cargo run --features editor --release --bin {{project-name}}",
      "linux": {
        "command": "cargo run --features bevy/dynamic --features editor --release --bin {{project-name}}"
      },
      "problemMatcher": ["$rustc"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true,
        "focus": true
      }
    },{% endif %}
    {
      "label": "Update",
      "detail": "Update dependencies (Cargo.lock)",
      "type": "shell",
      "command": "cargo update",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true,
        "focus": true
      }
    },
    {
      "label": "Clippy",
      "detail": "Look for Clippy errors",
      "type": "shell",
      "command": "cargo clippy --all-features --all-targets -- -D warnings",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true,
        "focus": true
      }
    },
    {
      "label": "Format",
      "detail": "Format all source",
      "type": "shell",
      "command": "cargo fmt --all --quiet",
      "problemMatcher": [],
      "presentation": {
        "echo": false,
        "reveal": "never",
        "panel": "shared",
        "showReuseMessage": false
      }
    }
  ]
}
