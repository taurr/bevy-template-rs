// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Test (fast compile)",
      "detail": "Runs all tests",
      "type": "shell",
      "command": "cargo t --workspace --features bevy/dynamic",
      "options": {
        "env": {
          "RUST_LOG": "warn,{{crate_name}}=trace"
        }
      },
      "problemMatcher": ["$rustc"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true,
        "focus": true
      }
    },
    {
      "label": "Build release",
      "detail": "Make a release build",
      "type": "shell",
      "command": "cargo build --release",
      "problemMatcher": ["$rustc"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true,
        "focus": true
      }
    },
    {
      "label": "Build debug",
      "detail": "Make a debug build",
      "type": "shell",
      "command": "cargo build",
      "problemMatcher": ["$rustc"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true,
        "focus": true
      }
    },
    {
      "label": "Check all-features (fast compile)",
      "detail": "Run a compile check against all features",
      "type": "shell",
      "command": "cargo check --features bevy/dynamic --all-features --all-targets",
      "problemMatcher": ["$rustc"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true,
        "focus": true
      }
    },
    {
      "label": "Run release (fast compile)",
      "detail": "Runs binary in release mode",
      "type": "shell",
      "command": "cargo run --features bevy/dynamic --release --bin {{project-name}}",
      "problemMatcher": ["$rustc"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true,
        "focus": true
      }
    },
    {
      "label": "Run debug (fast compile)",
      "detail": "Runs binary in debug mode",
      "type": "shell",
      "command": "cargo run --features bevy/dynamic --bin {{project-name}}",
      "problemMatcher": ["$rustc"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true,
        "focus": true
      }
    },
    {
      "label": "Update",
      "detail": "Update dependencies (Cargo.lock)",
      "type": "shell",
      "command": "cargo update",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true,
        "focus": true
      }
    },
    {
      "label": "Clippy",
      "detail": "Look for Clippy errors",
      "type": "shell",
      "command": "cargo clippy --all-features --all-targets -- -D warnings",
      "problemMatcher": [],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true,
        "focus": true
      }
    },
    {
      "label": "Format",
      "detail": "Format all source",
      "type": "shell",
      "command": "cargo fmt --all --quiet",
      "problemMatcher": [],
      "presentation": {
        "echo": false,
        "reveal": "never",
        "panel": "shared",
        "showReuseMessage": false
      }
    }
  ]
}
